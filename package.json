{
  "name": "brevity-plugin-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "publish-plugin": "brevity plugin publish patch -c ./src/plugin-config.json",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,css,html}'",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "oxlint --fix",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@brevity-builder/react": "^1.2.37",
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^1.5.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@brevity-builder/cli": "^1.2.17",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-react": "^4.2.1",
    "oxlint": "^0.2.17",
    "storybook": "^8.0.8",
    "typescript": "^5.4.5",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.2.8"
  }
}
